<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="com.toien.discover.logback.ch7.SampleFilter" />

		<encoder>
			<pattern>%-4relative [%thread] %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<root>
		<appender-ref ref="STDOUT" />
	</root>
</configuration>